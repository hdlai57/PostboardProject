<%= render 'shared/title', title: 'Article List' %>


<%= link_to "New Post", new_post_path, class: 'btn btn-primary' %>
<br>
<br>

<% @posts.each do |post| %>

	<div class="row">
		<div class="well col-md-6">
			<h3><%= post.title %></h3>
			<p><%= post.content %></p>
			<span>
				<%= link_to "read the post... ", post_path(post) %>
			</span>
			<br>
			<br>
			<small>posted by </small> <%= "#{post.user.name}" %>
		</div>
	</div>
	
<% end %>
