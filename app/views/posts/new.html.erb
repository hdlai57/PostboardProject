<h1>Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>


<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :content %>
	<br>
	<%= f.text_area :content, size: "50x10" %> 
	<br>
	<%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary') %>
<% end %>
<br>
<br>
<%= link_to "Back to Main page", posts_path %>