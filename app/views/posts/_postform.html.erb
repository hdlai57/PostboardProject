<div class="well col-md-8">
	<%= form_for post do |f| %>
		<div class="form-group">
			<%= f.label :title %>
			<br>
			<%= f.text_field :title, size: "80" %>
			<br>
		</div>
		<div class="form-group">
			<%= f.label :content %>
			<br>
			<%= f.text_area :content, size: "80x15" %> 
		</div>
		<br>
		<div class="form-group">
			<%= f.label :categories %>
			<br>
			<%= collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |cbox| %>
				<%= cbox.label(class: "checkbox-inline") { cbox.check_box(class: "checkbox") + cbox.text} %>
			<% end %>			
		</div>
		<div class="form-group">
			<%= f.label :visible %>
			<%= f.check_box :visible, {:checked => "checked"}  %>
		</div>
		<br>
		<%= f.submit(post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary') %>
		<%= link_to "Cancel", :back, {:class=>"btn btn-default"} %>
	<% end %>
</div>